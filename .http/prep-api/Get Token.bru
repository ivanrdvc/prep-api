meta {
  name: Get Token
  type: http
  seq: 2
}

post {
  url: {{auth_url}}/oauth/token
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  grant_type: client_credentials
  client_id: {{client_id}}
  client_secret: {{client_secret}}
  audience: {{audience}}
}

script:post-response {
  bru.setEnvVar("access_token", res.body.access_token);
}
